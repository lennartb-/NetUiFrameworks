<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:NetMaui"
       x:Class="NetMaui.MainPage">


    <TabBar x:Name="DesktopTabBar">
        <Tab Title="Stammdaten">
            <ShellContent ContentTemplate="{DataTemplate local:ViewPage}" />
        </Tab>
        <Tab Title="Bestellungen">
            <ShellContent ContentTemplate="{DataTemplate local:ViewPage2}" />
        </Tab>
        <Tab Title="Rechnungen">
            <ShellContent ContentTemplate="{DataTemplate local:ViewPage}" />
        </Tab>
        <Tab Title="Intern">
            <ShellContent ContentTemplate="{DataTemplate local:ViewPage}" />
        </Tab>
    </TabBar>
</Shell>